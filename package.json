{
  "name": "homebrew-ui",
  "productName": "Homebrew UI",
  "version": "1.0.0",
  "description": "A modern GUI for Homebrew package manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "dev:electron": "npm run build:main && npm run build:preload && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js",
    "build:preload": "webpack --config webpack.preload.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "package": "npm run build && electron-builder",
    "lint": "eslint --ext .ts,.tsx src/"
  },
  "keywords": [
    "homebrew",
    "gui",
    "package-manager",
    "electron",
    "react"
  ],
  "author": {
    "name": "senma231",
    "email": "senmago231@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "html-webpack-plugin": "^5.6.3",
    "i18next": "^25.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "electron": "^13.6.9"
  }
}
