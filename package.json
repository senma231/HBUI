{
  "name": "homebrew-ui",
  "productName": "Homebrew UI",
  "version": "1.0.0",
  "description": "A modern GUI for Homebrew package manager",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "dev:electron": "npm run build:main && npm run build:preload && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js",
    "build:preload": "webpack --config webpack.preload.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac --universal",
    "package:linux:x64": "npm run build && electron-builder --linux --x64",
    "package:linux:arm64": "npm run build && electron-builder --linux --arm64",
    "package:all": "npm run build && electron-builder --mac --linux --universal",
    "test": "echo \"Running basic tests...\" && node test-homebrew.js",
    "lint": "eslint --ext .ts,.tsx src/"
  },
  "keywords": [
    "homebrew",
    "gui",
    "package-manager",
    "electron",
    "react"
  ],
  "author": {
    "name": "senma231",
    "email": "senmago231@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "html-webpack-plugin": "^5.6.3",
    "i18next": "^25.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "electron": "^32.2.7",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.senma231.homebrew-ui",
    "productName": "Homebrew UI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "app.js",
      "src/renderer/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!**/*.ts",
      "!**/*.tsx",
      "!src/main/**/*",
      "!src/types/**/*",
      "!webpack*.js",
      "!tsconfig.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Development",
      "icon": "assets/icon.png",
      "desktop": {
        "Name": "Homebrew UI",
        "Comment": "A modern GUI for Homebrew package manager",
        "Keywords": "homebrew;package;manager;gui;"
      }
    },
    "dmg": {
      "title": "Homebrew UI ${version}",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": null
  }
}
